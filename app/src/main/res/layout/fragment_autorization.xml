<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_y="108pt"
    android:background="@color/Background"
    tools:context="messenger.ui.AutorizationFragment">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/Messenger_logo"
        android:textSize="40dp"
        android:textColor="@color/textLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/mail_enter_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo" />

    <EditText
        android:id="@+id/mail_enter"
        android:text="mail"
        android:textColor="@color/Labeltext"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/mail_enter_icon"
        app:layout_constraintTop_toBottomOf="@+id/Logo" />

    <ImageView
        android:id="@+id/password_enter_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/key"
        app:layout_constraintTop_toBottomOf="@+id/mail_enter_icon"
        tools:layout_editor_absoluteX="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password_enter"
        android:text="password"
        android:textColor="@color/Labeltext"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/password_enter_icon"
        app:layout_constraintTop_toBottomOf="@+id/mail_enter" />


</androidx.constraintlayout.widget.ConstraintLayout>